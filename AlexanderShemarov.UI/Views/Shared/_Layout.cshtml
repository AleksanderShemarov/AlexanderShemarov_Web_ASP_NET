<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AlexanderShemarov.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" /><!--Connection for Bootstrap's Icons-->
    <link rel="stylesheet" href="~/AlexanderShemarov.UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container">
            <nav class="navbar navbar-expand-md navbar-dark bg-dark">

                <!--Website Menu-->
                @await Html.PartialAsync("_MenuPartial")
                <!---->

                <!--User's Info-->
                @await Html.PartialAsync("_UserInfoPartial")
                <!---->

            </nav>
        </div>
    </header>

    <div class="container">

        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <div class="navbar navbar-dark navbar-expand-md bg-dark">
                <div class="navbar-nav ms-auto">
                    <a class="nav-item nav-link" href="http://www.facebook.com">
                        <i class="bi bi-facebook fs-3"></i>
                    </a>
                    <a class="nav-item nav-link" href="http://www.x.com">
                        <i class="bi bi-twitter-x fs-3"></i>
                    </a>
                    <a class="nav-item nav-link" href="http://www.youtube.com">
                        <i class="bi bi-youtube fs-3"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
